# ----------------------------
# Server
# ----------------------------
PORT=8000

# ----------------------------
# RabbitMQ connection
# ----------------------------
RABBITMQ_HOST=example.rmq.cloudamqp.com
RABBITMQ_PORT=5672
RABBITMQ_VHOST=your_vhost
RABBITMQ_USERNAME=your_username
RABBITMQ_PASSWORD=your_password
RABBITMQ_USE_TLS=false

# ----------------------------
# Facade auth
# ----------------------------
FACADE_API_KEY=replace_with_api_key

# ----------------------------
# Legacy / optional
# ----------------------------
QUEUE_NAME=legacy-not-used-in-v2

# ----------------------------
# Consumer tuning
# ----------------------------
PREFETCH=200
DEFAULT_LEASE_SECONDS=10
RABBITMQ_HEARTBEAT=60
RABBITMQ_BLOCKED_CONNECTION_TIMEOUT=30
RABBITMQ_SOCKET_TIMEOUT=10
CONSUMER_RECONNECT_DELAY=5

# ----------------------------
# Audit publishing
# ----------------------------
AUDIT_QUEUE=Unir.Audit.ReceivedBusMessages
SUBSCRIBER_APPLICATION=PingOneAIC

# ----------------------------
# Backward-compatible defaults for /v1/events/users
# ----------------------------
DEFAULT_QUEUE_USERS=Ping.CuentaModificadaSubscriptor
DEFAULT_EVENTTYPE_USERS=CuentaModificada
